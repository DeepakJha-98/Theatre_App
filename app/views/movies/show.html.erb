<h1><%= "Movie : #{@movie.name}" %></h1>

<% if signed_in? %>
<%= link_to "Customers",customers_path(movie_id: @movie.id) %>
<br>
<br>
<div>
	<h3>Book Your Ticket :</h3>
<%= form_tag customers_path(theatre_id: @movie.screen.theatre.id, movie_id: @movie.id) do %>
<div>
	<%= label_tag :name %>
	<%= text_field_tag :name %>

	<%= submit_tag "Book Ticket" %>
</div>
</div>

<br>
<div>
	<%= link_to "sign out",  sessions_destroy_path, method: :delete %>
</div>

<% end %>
<% else %>

<%= link_to "Sign In!",sessions_new_path %>
<% end %>
<br>
<br>
<%= link_to "Back to Home page", root_path %>